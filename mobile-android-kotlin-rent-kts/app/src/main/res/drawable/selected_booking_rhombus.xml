<?xml version="1.0" encoding="utf-8"?>
<layer-list

    xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:width="6dp"
        android:height="6dp"
        android:left="2dp"
        android:right="2dp">
        <rotate
            android:fromDegrees="45"
            android:pivotX="50%"
            android:pivotY="50%">
            <shape android:shape="rectangle">
                <solid android:color="@color/yellow" />
            </shape>
        </rotate>
    </item>
</layer-list>