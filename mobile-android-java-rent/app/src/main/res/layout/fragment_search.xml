<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ltSearchFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B6D9EF">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtName"
                android:text="Найти квартиру:"
                android:textSize="20sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="20dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:background="#EBEBB9"
                android:padding="2dp">

                <Button
                    android:enabled="true"
                    android:id="@+id/btnTown"
                    android:text="Москва"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:onClick="onClick"
                    android:gravity="center_vertical"
                    android:drawableLeft="@drawable/baseline_search_24"
                    android:drawableStart="@drawable/baseline_search_24"
                    android:drawablePadding="10dp"
                    android:textAllCaps="false"
                    android:backgroundTint="#FFFFFF"/>

                <Button
                    android:id="@+id/btnDate"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:onClick="onClick"
                    android:gravity="center_vertical"
                    android:drawableLeft="@drawable/baseline_date_range_24"
                    android:drawableStart="@drawable/baseline_date_range_24"
                    android:drawablePadding="10dp"
                    android:textAllCaps="false"
                    android:backgroundTint="#FFFFFF"/>

                <Button
                    android:id="@+id/btnNumberPerson"
                    android:text="3"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:onClick="onClick"
                    android:gravity="center_vertical"
                    android:drawableLeft="@drawable/baseline_people_alt_24"
                    android:drawableStart="@drawable/baseline_people_alt_24"
                    android:drawablePadding="10dp"
                    android:textAllCaps="false"
                    android:backgroundTint="#FFFFFF"/>

                <Button
                    android:id="@+id/btnSearch"
                    android:text="@string/find"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:backgroundTint="#FFFFFF"/>

            </LinearLayout>

            <FrameLayout
                android:id="@+id/frgmCont"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </FrameLayout>

        </LinearLayout>

    </ScrollView>

</androidx.drawerlayout.widget.DrawerLayout>